package main

import (
	"fmt"
	"math"
)

func main() {
	var jariJari float64
	fmt.Print("Jejari = ")
	fmt.Scanln(&jariJari)

	volumeBola := (4.0 / 3.0) * math.Pi * math.Pow(jariJari, 3)
	luasKulitBola := 4 * math.Pi * math.Pow(jariJari, 2)

	fmt.Printf("Bola dengan jejari %.0f memiliki volume %.4f dan luas kulit %.4f\n", jariJari, volumeBola, luasKulitBola)
}
